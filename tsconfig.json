{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false, // It was supposed to be open, so we could adapt the old version
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": [
    "node_modules",
    "packages/docusaurus-plugin-openapi-docs/node_modules",
    "packages/docusaurus-theme-openapi-docs/node_modules"
  ],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
